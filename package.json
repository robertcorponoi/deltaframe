{
  "name": "deltaframe",
  "version": "2.0.2",
  "description": "An animation and game loop manager.",
  "module": "deltaframe.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "bundle": "rollup -c",
    "bundle:watch": "rollup -c --watch",
    "type-check:build:bundle": "npm run type-check && npm run build && npm run bundle",
    "test": "node test/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robertcorponoi/deltaframe"
  },
  "keywords": [
    "game",
    "loop",
    "game loop",
    "animation",
    "frame",
    "delta"
  ],
  "typings": "lib/index.d.ts",
  "author": "Robert Corponoi",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "rollup": "^2.0.2",
    "rollup-plugin-babel": "^4.4.0",
    "sinon": "^9.0.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
